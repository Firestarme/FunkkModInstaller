<Window x:Class="FunkkModInstaller.Utilities.SelectDirDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FunkkModInstaller.Utilities"
        mc:Ignorable="d"
        Title="SelectFileDialog" Height="400" Width="300
        ">
    <DockPanel LastChildFill="true">

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" DockPanel.Dock="Bottom">
            <Button x:Name="Button_OK" Width="80" Margin="5" Padding="2">OK</Button>
            <Button x:Name="Button_Cancel" Width="80" Margin="5" Padding="2">Cancel</Button>
        </StackPanel>
        
        <TreeView x:Name="DirViewer" Margin="5"/>
        
    </DockPanel>
</Window>
